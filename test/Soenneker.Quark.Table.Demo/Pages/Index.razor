@page "/"
@using Microsoft.Extensions.Logging

@inject ILogger<Index> Logger

<PageTitle>QuarkTable - Modern Blazor Data Tables</PageTitle>

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-8 mx-auto text-center">
                <div class="hero-content">
                    <h1 class="display-4 fw-bold text-gradient mb-3">QuarkTable</h1>
                    <p class="lead fs-5 text-muted mb-4">Modern, component-driven data tables for Blazor with server-side processing, real-time search, sorting, and pagination.</p>
                    
                    <div class="demo-grid mt-5">
                        <div class="row g-4">
                            <div class="col-md-4">
                                <a href="/basic" class="demo-card">
                                    <div class="demo-card-content">
                                        <div class="demo-icon">📊</div>
                                        <h3>Basic Demo</h3>
                                        <p>Simple table with search, sorting, and pagination</p>
                                        <div class="demo-badges">
                                            <span class="badge">Search</span>
                                            <span class="badge">Sorting</span>
                                            <span class="badge">Pagination</span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="/paged-result-demo" class="demo-card">
                                    <div class="demo-card-content">
                                        <div class="demo-icon">✨</div>
                                        <h3>PagedResult Demo</h3>
                                        <p>Advanced pagination with continuation tokens</p>
                                        <div class="demo-badges">
                                            <span class="badge">PagedResult</span>
                                            <span class="badge">Continuation Tokens</span>
                                            <span class="badge">Debug Info</span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="/loading-demo" class="demo-card">
                                    <div class="demo-card-content">
                                        <div class="demo-icon">⚡</div>
                                        <h3>Loading Demo</h3>
                                        <p>Smooth loading behavior with overlay</p>
                                        <div class="demo-badges">
                                            <span class="badge">Loading</span>
                                            <span class="badge">Overlay</span>
                                            <span class="badge">Smooth UX</span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        position: relative;
        overflow: hidden;
        min-height: 100vh;
        display: flex;
        align-items: center;
    }
    
    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/><circle cx="10" cy="60" r="0.5" fill="white" opacity="0.1"/><circle cx="90" cy="40" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.3;
    }
    
    .hero-content { 
        position: relative; 
        z-index: 1; 
    }
    
    .text-gradient {
        background: linear-gradient(45deg, #fff, #f8f9fa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .demo-grid {
        margin-top: 3rem;
    }
    
    .demo-card {
        display: block;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        padding: 2rem;
        text-decoration: none;
        color: white;
        transition: all 0.3s ease;
        height: 100%;
        position: relative;
        overflow: hidden;
    }
    
    .demo-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, rgba(255,255,255,0.1), rgba(255,255,255,0.05));
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .demo-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.3);
        color: white;
        text-decoration: none;
    }
    
    .demo-card:hover::before {
        opacity: 1;
    }
    
    .demo-card-content {
        position: relative;
        z-index: 1;
        text-align: center;
    }
    
    .demo-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        display: block;
    }
    
    .demo-card h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    
    .demo-card p {
        font-size: 0.9rem;
        opacity: 0.9;
        margin-bottom: 1rem;
    }
    
    .demo-badges {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
    
    .badge {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 500;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }
    
    .min-vh-75 { 
        min-height: 75vh; 
    }
    
    @@media (max-width: 768px) {
        .hero-section { 
            min-height: 100vh; 
        }
        .display-4 { 
            font-size: 2.5rem; 
        }
        .demo-card {
            margin-bottom: 1rem;
        }
    }
</style>

@code {
    protected override void OnInitialized()
    {
        Logger.LogInformation("Landing page loaded");
    }
}
